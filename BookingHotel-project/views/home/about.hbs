<html lang="vi">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{{title}} - Azure Ocean Resort</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/home/css/styles.css" />
  </head>
  <body class="bg-gray-50 text-gray-800 antialiased">
    <main class="py-12">
      <div
        class="mx-auto max-w-4xl rounded-lg border border-gray-200 bg-white p-8 shadow-sm"
      >
        <h1 class="text-2xl font-semibold mb-6 text-center">{{title}}</h1>

        <div class="prose max-w-none text-sm text-gray-700 space-y-6">
          {{#each abouts}}
            <section
              class="border-b border-gray-200 pb-4 last:border-b-0 last:pb-0"
            >
              <h2
                class="text-lg font-semibold text-gray-900 mb-2"
              >{{title}}</h2>
              <div class="text-gray-600 leading-relaxed">
                {{{description}}}
              </div>
            </section>
          {{/each}}
        </div>
      </div>
    </main>
  </body>
</html>