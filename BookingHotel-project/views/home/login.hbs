<html lang="vi">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Đăng nhập - Azure Ocean Resort</title>

    <!-- Tailwind CDN -->
    <script>
      tailwind = { config: { theme: { extend: { colors: { primary:
      "hsl(var(--primary))", "primary-foreground":
      "hsl(var(--primary-foreground))", secondary: "hsl(var(--secondary))",
      "secondary-foreground": "hsl(var(--secondary-foreground))", accent:
      "hsl(var(--accent))", "accent-foreground":
      "hsl(var(--accent-foreground))", background: "hsl(var(--background))",
      foreground: "hsl(var(--foreground))", muted: "hsl(var(--muted))",
      "muted-foreground": "hsl(var(--muted-foreground))", border:
      "hsl(var(--border))", card: "hsl(var(--card))", "card-foreground":
      "hsl(var(--card-foreground))", }, borderRadius: { lg: "0.75rem" }, }, },
      }, };
    </script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/home/css/styles.css" />
  </head>
  <body class="bg-background text-foreground antialiased">
    <!-- Toasts -->
    <div id="toasts" class="toast-wrap" aria-live="polite"></div>

    <!-- Header -->

    <!-- Page content -->
    <main class="page-container">
      <div class="form-container">
        <div class="text-center mb-6">

          <h1 class="text-2xl font-semibold mb-2">Đăng nhập</h1>
          <p class="text-sm text-muted-foreground">
            Đăng nhập để đặt phòng và quản lý đặt chỗ của bạn
          </p>
        </div>
        {{! errors hoặc success của đăng ký }}
        {{#if success_message}}
          <div
            class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4"
            role="alert"
          >
            {{success_message}}
          </div>
        {{/if}}

        {{#if error_message}}
          <div
            class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4"
            role="alert"
          >
            {{error_message}}
          </div>
        {{/if}}
        {{! errors mặc định của passport local  }}
        {{#if error}}
          <div
            class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4"
            role="alert"
          >
            <span class="block sm:inline">{{error}}</span>
          </div>
        {{/if}}
        {{! erros cho từng input khi chưa nhập }}
        {{#if error_message}}
          <div
            class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4"
          >
            {{error_message}}
          </div>
        {{/if}}
        {{#if errors}}
          {{#each errors}}
            <div
              class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4"
            >
              {{message}}
            </div>
          {{/each}}
        {{/if}}
        <!-- Login Form -->
        <form id="loginForm" action="/login" method="POST">
          <div class="space-y-4">
            <div class="form-group">
              <label for="loginEmail" class="form-label">Email</label>
              <input
                id="loginEmail"
                type="email"
                name="email"
                placeholder="email@example.com"
                class="form-input"
              />
              <span
                id="err_loginEmail"
                class="form-error"
                style="display: none"
              ></span>
            </div>
            <div class="form-group">
              <label for="loginPassword" class="form-label">Mật khẩu</label>
              <input
                name="password"
                id="loginPassword"
                type="password"
                placeholder="Nhập mật khẩu"
                class="form-input"
              />
              <span
                id="err_loginPassword"
                class="form-error"
                style="display: none"
              ></span>
            </div>
            <button
              id="submitLogin"
              class="form-button form-button-primary"
              type="submit"
            >
              Đăng nhập
            </button>
          </div>
        </form>

        <!-- (Register form moved to a separate page `register.hbs`) -->

        <div class="mt-6 text-center flex flex-col gap-2">
          <a
            href="/"
            class="text-sm text-muted-foreground hover:text-foreground"
          >← Quay lại trang chủ</a>
          <div class="text-sm flex items-center justify-center gap-1">
            <span>Bạn chưa có tài khoản?</span>
            <a class="font-medium" href="/register">Đăng ký</a>
          </div>
        </div>
      </div>
    </main>

    <script src="/home/js/data.js"></script>
    <script src="/home/js/utils.js"></script>
    <script src="/home/js/login.js"></script>
  </body>
</html>