<html lang="vi">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Đặt phòng - Azure Ocean Resort</title>

    <!-- Tailwind CDN -->
    <script>
      tailwind = { config: { theme: { extend: { colors: { primary:
      "hsl(var(--primary))", "primary-foreground":
      "hsl(var(--primary-foreground))", secondary: "hsl(var(--secondary))",
      "secondary-foreground": "hsl(var(--secondary-foreground))", accent:
      "hsl(var(--accent))", "accent-foreground":
      "hsl(var(--accent-foreground))", background: "hsl(var(--background))",
      foreground: "hsl(var(--foreground))", muted: "hsl(var(--muted))",
      "muted-foreground": "hsl(var(--muted-foreground))", border:
      "hsl(var(--border))", card: "hsl(var(--card))", "card-foreground":
      "hsl(var(--card-foreground))", }, borderRadius: { lg: "0.75rem" }, }, },
      }, };
    </script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/home/css/styles.css" />
  </head>
  <body class="bg-background text-foreground antialiased">
    <!-- Toasts -->
    <div id="toasts" class="toast-wrap" aria-live="polite"></div>

    <!-- Header -->

    <!-- Page content -->
    <main class="page-container">
      <div class="max-w-4xl mx-auto">
        <div class="max-w-3xl mx-auto">
          <div
            class="overflow-hidden rounded-lg border border-gray-200 bg-white shadow-md"
          >
            {{#if success_message}}
              <div class="mb-4 rounded bg-green-100 px-4 py-2 text-green-800">
                {{success_message}}
              </div>
            {{/if}}

            {{#if error_message}}
              <div class="mb-4 rounded bg-red-100 px-4 py-2 text-red-800">
                {{error_message}}
              </div>
            {{/if}}
            <div class="border-b bg-gray-50 px-6 py-4">
              <h2 class="text-lg font-semibold text-gray-900">Đặt phòng</h2>
              <p class="text-sm text-gray-500">Chọn phòng và thời gian lưu trú</p>
            </div>
            <form action="/booking" method="POST" class="p-6 space-y-6">
              <div>
                <label
                  class="block text-sm font-medium text-gray-700"
                >Phòng</label>
                <select
                  name="room"
                  required
                  class="mt-1 w-full rounded-md border border-gray-300 px-3 py-2 text-sm"
                >
                  {{#each rooms}}
                    <option value="{{_id}}">
                      Phòng
                      {{roomNumber}}
                      –
                      {{roomType.name}}
                    </option>
                  {{/each}}
                </select>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Check In</label>
                <input
                  type="date"
                  name="checkIn"
                  required
                  class="mt-1 w-full rounded-md border border-gray-300 px-3 py-2 text-sm"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Check Out</label>
                <input
                  type="date"
                  name="checkOut"
                  required
                  class="mt-1 w-full rounded-md border border-gray-300 px-3 py-2 text-sm"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Số khách</label>
                <input
                  type="number"
                  name="guests"
                  min="1"
                  value="1"
                  required
                  class="mt-1 w-full rounded-md border border-gray-300 px-3 py-2 text-sm"
                />
              </div>
              <div class="flex justify-end gap-3 border-t pt-4">
                <a
                  href="/"
                  class="rounded-md border border-gray-300 px-4 py-2 text-sm"
                >
                  Huỷ
                </a>

                <button
                  type="submit"
                  class="rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white"
                >
                  Đặt phòng
                </button>
              </div>

            </form>
          </div>
        </div>

      </div>
    </main>

    <script src="/home/js/data.js"></script>
    <script src="/home/js/utils.js"></script>
    <script src="/home/js/booking.js"></script>
  </body>
</html>