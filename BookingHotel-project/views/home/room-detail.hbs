<p>ROOM NUMBER: {{room.roomNumber}}</p>
<p>ROOM TYPE: {{room.roomType.name}}</p>
<p>DESCRIPTION: {{room.roomType.description}}</p>

<html lang="vi">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Chi tiết phòng - Azure Ocean Resort</title>

    <!-- Tailwind CDN -->
    <script>
      tailwind = { config: { theme: { extend: { colors: { primary:
      "hsl(var(--primary))", "primary-foreground":
      "hsl(var(--primary-foreground))", secondary: "hsl(var(--secondary))",
      "secondary-foreground": "hsl(var(--secondary-foreground))", accent:
      "hsl(var(--accent))", "accent-foreground":
      "hsl(var(--accent-foreground))", background: "hsl(var(--background))",
      foreground: "hsl(var(--foreground))", muted: "hsl(var(--muted))",
      "muted-foreground": "hsl(var(--muted-foreground))", border:
      "hsl(var(--border))", card: "hsl(var(--card))", "card-foreground":
      "hsl(var(--card-foreground))", }, borderRadius: { lg: "0.75rem" }, }, },
      }, };
    </script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/home/css/styles.css" />
  </head>
  <body class="bg-background text-foreground antialiased">
    <main class="pt-6 pb-6">
      <section class="pt-24 pb-24">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">

          <div class="mb-6">
            <a href="/rooms/room-list" class="text-sm hover:underline">
              ← Quay lại danh sách phòng
            </a>
          </div>

          <div class="grid md:grid-cols-2 gap-8">

            <div>
              <img
                src="{{room.image}}"
                alt="Phòng {{room.roomNumber}}"
                class="w-full h-[360px] object-cover rounded-lg"
              />
            </div>

            <div>
              <h1 class="text-3xl font-bold mb-4">
                Phòng
                {{room.roomNumber}}
                –
                {{room.roomType.name}}
              </h1>

              <p class="mb-4 text-muted-foreground">
                {{room.roomType.description}}
              </p>

              <h3 class="font-semibold mb-2">Tiện ích</h3>
              <ul class="space-y-2">
                {{#each room.roomType.amenities}}
                  <li>✔ {{name}}</li>
                {{/each}}
              </ul>
            </div>

          </div>
        </div>
      </section>
    </main>
  </body>
</html>