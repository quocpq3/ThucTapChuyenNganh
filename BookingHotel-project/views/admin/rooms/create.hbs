<div class="max-w-3xl mx-auto">
  <div
    class="overflow-hidden rounded-lg border border-gray-200 bg-white shadow-md"
  >
    <div class="border-b bg-gray-50 px-6 py-4">
      <h2 class="text-lg font-semibold text-gray-900">Thêm phòng</h2>
      <p class="text-sm text-gray-500">Tạo phòng mới cho khách sạn</p>
    </div>
    <form action="/admin/rooms/create" method="POST" class="p-6 space-y-6">
      <div>
        <label class="block text-sm font-medium text-gray-700">Số phòng</label>
        <input
          type="text"
          name="roomNumber"
          required
          class="mt-1 w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
          placeholder="101"
        />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Loại phòng</label>
        <select
          name="roomType"
          required
          class="mt-1 w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
        >
          {{#each roomtypes}}
            <option value="{{_id}}">{{name}}</option>
          {{/each}}
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Tầng</label>
        <input
          type="text"
          name="floor"
          required
          class="mt-1 w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
          placeholder="1st Floor"
        />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Trạng thái</label>
        <select
          name="status"
          class="mt-1 w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
        >
          <option value="Available">Có sẵn</option>
          <option value="Occupied">Đang sử dụng</option>
          <option value="Maintenance">Bảo trì</option>
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Ghi chú</label>
        <textarea
          name="notes"
          rows="2"
          class="mt-1 w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
          placeholder="Optional notes about this room"
        ></textarea>
      </div>
      <div class="flex justify-end gap-3 border-t pt-4">
        <a
          href="/admin/rooms"
          class="inline-flex items-center rounded-md border border-gray-300 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100"
        >
          Huỷ
        </a>

        <button
          type="submit"
          class="inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white hover:bg-blue-700"
        >
          Thêm phòng
        </button>
      </div>

    </form>
  </div>
</div>