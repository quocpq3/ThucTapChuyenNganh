<a href="/admin/roomtype/create" class="btn btn-primary mb-3">
  Add Room Type
</a>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>STT</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    {{#each roomtypes}}
      <tr>
        <td>{{stt}}</td>
        <td>{{name}}</td>
        <td>{{description}}</td>
        <td>
          {{#if status}}
            <span class="badge bg-success">Active</span>
          {{else}}
            <span class="badge bg-secondary">Inactive</span>
          {{/if}}
        </td>
        <td>
          <a href="/admin/roomtype/edit/{{_id}}">
            <i class="fa-solid fa-pen-to-square text-warning"></i>
          </a>
        </td>
        <td>
          <form
            action="/admin/roomtype/{{_id}}?_method=DELETE"
            method="POST"
            style="display:inline"
          >
            <button type="submit" class="border-0 bg-transparent">
              <i class="fa-solid fa-trash text-danger"></i>
            </button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>