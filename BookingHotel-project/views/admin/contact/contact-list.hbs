<div class="flex items-center mb-4 justify-between">
  <h2 class="text-lg font-semibold text-gray-700 mr-4">Quản lý Liên hệ</h2>
  <a
    href="/admin/contact/create"
    class="inline-block mb-4 rounded bg-blue-600 px-4 py-2 text-sm font-semibold text-white hover:bg-blue-700"
  >
    Thêm liên hệ
  </a>
</div>

<div class="overflow-hidden rounded-lg border border-gray-200 shadow-md">
  <table
    class="w-full border-collapse bg-white text-left text-sm text-gray-500"
  >
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-4 font-medium text-gray-900">#</th>
        <th class="px-6 py-4 font-medium text-gray-900">Tiêu đề</th>
        <th class="px-6 py-4 font-medium text-gray-900">Email</th>
        <th class="px-6 py-4 font-medium text-gray-900">SĐT</th>
        <th class="px-6 py-4 font-medium text-gray-900">Địa chỉ</th>
        <th class="px-6 py-4 font-medium text-gray-900 text-right">Thao tác</th>
      </tr>
    </thead>

    <tbody class="divide-y divide-gray-100 border-t border-gray-100">
      {{#each contacts}}
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 text-gray-700">{{stt}}</td>
          <td class="px-6 py-4 font-medium text-gray-900">{{title}}</td>
          <td class="px-6 py-4">{{email}}</td>
          <td class="px-6 py-4">{{phone}}</td>
          <td class="px-6 py-4">{{address}}</td>
          <td class="px-6 py-4">
            <div class="flex justify-end gap-4">
              <form
                action="/admin/contact/{{_id}}?_method=DELETE"
                method="POST"
              >
                <button
                  type="submit"
                  class="text-red-600 hover:text-red-800"
                  title="Xoá"
                >
                  <i class="fa-solid fa-trash"></i>
                </button>
              </form>
              <a
                href="/admin/contact/edit/{{_id}}"
                class="text-yellow-500 hover:text-yellow-700"
                title="Sửa"
              >
                <i class="fa-solid fa-pen-to-square"></i>
              </a>
            </div>
          </td>
        </tr>
      {{/each}}

    </tbody>

  </table>
</div>