<div class="flex items-center justify-between mb-4">
  <h2 class="text-lg font-semibold text-gray-700">
    Quản lý Quyền riêng tư
  </h2>

  <a
    href="/admin/privacy/create"
    class="inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white hover:bg-blue-700"
  >
    Thêm mục
  </a>
</div>

<div
  class="overflow-hidden rounded-lg border border-gray-200 bg-white shadow-md"
>
  <table class="w-full table-fixed text-sm text-gray-600">
    <thead class="bg-gray-50">
      <tr>
        <th class="w-12 px-4 py-3 text-center font-medium text-gray-900">#</th>
        <th class="w-16 px-4 py-3 text-center font-medium text-gray-900">Số</th>
        <th class="w-1/4 px-4 py-3 font-medium text-gray-900">Tiêu đề</th>
        <th class="px-4 py-3 font-medium text-gray-900">Nội dung</th>
        <th class="w-24 px-4 py-3 text-center font-medium text-gray-900">
          Thao tác
        </th>
      </tr>
    </thead>

    <tbody class="divide-y divide-gray-100">
      {{#each privacies}}
        <tr class="hover:bg-gray-50 align-top">
          <td class="px-4 py-3 text-center">{{stt}}</td>
          <td class="px-4 py-3 text-center font-medium">{{number}}</td>

          <td class="px-4 py-3 font-medium text-gray-900">
            {{title}}
          </td>

          <td class="px-4 py-3 text-gray-600">
            <div class="line-clamp-3">
              {{{description}}}
            </div>
          </td>

          <td class="px-4 py-3">
            <div class="flex justify-center gap-4">
              <a
                href="/admin/privacy/edit/{{_id}}"
                class="text-yellow-500 hover:text-yellow-700"
                title="Sửa"
              >
                <i class="fa-solid fa-pen-to-square"></i>
              </a>

              <form
                action="/admin/privacy/{{_id}}?_method=DELETE"
                method="POST"
              >
                <button
                  type="submit"
                  class="text-red-600 hover:text-red-800"
                  title="Xoá"
                  onclick="return confirm('Xoá mục quyền riêng tư này?')"
                >
                  <i class="fa-solid fa-trash"></i>
                </button>
              </form>
            </div>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>