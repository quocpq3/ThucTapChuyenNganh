<div class="max-w-4xl mx-auto">
  <div class="rounded-lg border border-gray-200 bg-white shadow-md">
    <div class="border-b border-gray-200 px-6 py-4">
      <h3 class="text-lg font-semibold text-gray-900">
        Edit Endowment
      </h3>
    </div>

    <form
      action="/admin/endow/edit/{{endow._id}}?_method=PUT"
      method="POST"
      class="px-6 py-6 space-y-6"
    >
      <!-- Name -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Name
        </label>
        <input
          type="text"
          name="name"
          value="{{endow.name}}"
          required
          class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm
                 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
        />
      </div>

      <!-- Description -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Description
        </label>
        <textarea
          name="description"
          rows="3"
          class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm
                 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
        >{{endow.description}}</textarea>
      </div>

      <!-- Promotion Type -->
      <div>
  <label class="block text-sm font-medium text-gray-700 mb-1">
    Promotion Type
  </label>
  <select
    name="type"
    class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm
           focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
  >
    <option value="percent" {{#if endow.isPercent}}selected{{/if}}>
      Giảm %
    </option>
    <option value="amount" {{#if endow.isAmount}}selected{{/if}}>
      Giảm tiền
    </option>
    <option value="combo" {{#if endow.isCombo}}selected{{/if}}>
      Combo
    </option>
  </select>
</div>


      <!-- Promotion Value -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Promotion Value
        </label>
        <input
          type="number"
          name="value"
          value="{{endow.value}}"
          class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm
                 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
        />
      </div>

      <!-- Amenity -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Amenity (Combo)
        </label>
        <textarea
          name="amenity"
          rows="3"
          class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm
                 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
        >{{endow.amenity}}</textarea>
      </div>

      <!-- Status -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Status
        </label>
        <select
          name="status"
          class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm
                 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
        >
          <option value="true" {{#if endow.status}}selected{{/if}}>
            Active
          </option>
          <option value="false" {{#unless endow.status}}selected{{/unless}}>
            Inactive
          </option>
        </select>
      </div>

      <!-- Actions -->
      <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
        <a
          href="/admin/endow"
          class="rounded-md border border-gray-300 px-4 py-2 text-sm font-medium
                 text-gray-700 hover:bg-gray-100"
        >
          Cancel
        </a>

        <button
          type="submit"
          class="rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold
                 text-white hover:bg-blue-700"
        >
          Update Endow
        </button>
      </div>
    </form>
  </div>
</div>
