<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Document</title>
  </head>
  <body>
    <main id="mainContent" class="p-4 md:p-8 space-y-6">
    </main>

    <div
      id="roomModal"
      class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4 hidden"
    >
      <div
        class="bg-white rounded-xl shadow-2xl w-full max-w-lg lg:max-w-xl p-6 relative max-h-[90vh] overflow-y-auto"
      >
        <button
          id="closeModalBtn"
          class="absolute top-3 right-3 text-gray-400 hover:text-gray-700 text-2xl transition-colors"
        >&times;</button>

        <h2
          id="modalTitle"
          class="text-2xl font-bold text-gray-800 mb-6 border-b pb-2"
        >Thêm phòng</h2>

        <form id="roomForm" class="space-y-5">
          <input type="hidden" id="roomId" />

          <div>
            <label
              for="roomName"
              class="block mb-1 font-semibold text-gray-700"
            >Tên phòng</label>
            <input
              type="text"
              id="roomName"
              class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
              required
            />
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
            <div>
              <label
                for="roomType"
                class="block mb-1 font-semibold text-gray-700"
              >Loại phòng</label>
              <select
                id="roomType"
                class="w-full border border-gray-300 rounded-lg px-4 py-2 appearance-none bg-white focus:ring-blue-500 focus:border-blue-500 transition duration-150"
                required
              >
                <option value="Phòng đơn">Phòng đơn</option>
                <option value="Phòng đôi">Phòng đôi</option>
                <option value="Phòng VIP">Phòng VIP</option>
                <option value="Suite">Suite</option>
                <option value="Biệt Thự">Biệt Thự</option>
              </select>
            </div>

            <div>
              <label
                for="roomBedType"
                class="block mb-1 font-semibold text-gray-700"
              >Loại giường</label>
              <input
                type="text"
                id="roomBedType"
                class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
                placeholder="King / 2 King / Twin..."
              />
            </div>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6">
            <div>
              <label
                for="roomPrice"
                class="block mb-1 font-semibold text-gray-700"
              >Giá (VNĐ/đêm)</label>
              <input
                type="number"
                id="roomPrice"
                class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
                min="0"
                required
              />
            </div>
            <div>
              <label
                for="roomSize"
                class="block mb-1 font-semibold text-gray-700"
              >Diện tích (m²)</label>
              <input
                type="number"
                id="roomSize"
                class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
                min="0"
              />
            </div>
            <div>
              <label
                for="roomGuests"
                class="block mb-1 font-semibold text-gray-700"
              >Sức chứa (khách)</label>
              <input
                type="number"
                id="roomGuests"
                class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
                min="1"
              />
            </div>
          </div>

          <div>
            <label
              for="roomUrl"
              class="block mb-1 font-semibold text-gray-700"
            >URL ảnh</label>
            <input
              type="url"
              id="roomUrl"
              class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
              placeholder="/path/to/image.jpg"
            />
          </div>

          <div>
            <label
              for="roomDesc"
              class="block mb-1 font-semibold text-gray-700"
            >Mô tả</label>
            <textarea
              id="roomDesc"
              class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
              rows="3"
            ></textarea>
          </div>

          <div>
            <label
              for="roomFeatures"
              class="block mb-1 font-semibold text-gray-700"
            >Tiện nghi (phân cách bằng dấu phẩy)</label>
            <input
              type="text"
              id="roomFeatures"
              class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
              placeholder="WiFi, TV, Mini Bar, Điều Hòa"
            />
          </div>

          <div>
            <label
              for="roomStatus"
              class="block mb-1 font-semibold text-gray-700"
            >Trạng thái</label>
            <select
              id="roomStatus"
              class="w-full border border-gray-300 rounded-lg px-4 py-2 appearance-none bg-white focus:ring-blue-500 focus:border-blue-500 transition duration-150"
            >
              <option value="Trống">Trống</option>
              <option value="Đã đặt">Đã đặt</option>
              <option value="Bảo trì">Bảo trì</option>
            </select>
          </div>

          <div class="flex justify-end gap-3 pt-4 border-t mt-6">
            <button
              type="button"
              id="cancelBtn"
              class="px-5 py-2 border border-gray-300 bg-white text-gray-700 rounded-lg hover:bg-gray-100 transition duration-150"
            >Hủy</button>
            <button
              type="submit"
              class="px-5 py-2 bg-[#11234B] text-white rounded-lg hover:bg-opacity-90 transition duration-150 font-medium"
            >Lưu</button>
          </div>
        </form>
      </div>
    </div>

    <script type="module" src="/admin/js/dashboard.js"></script>
    <script type="module" src="/admin/js/rooms.js"></script>
    <script src="/home/js/data.js"></script>
  </body>
</html>