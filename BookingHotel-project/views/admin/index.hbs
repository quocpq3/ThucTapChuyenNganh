<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
</head>
<body>
    <!-- Nội dung chính -->
    <div class="p-6 space-y-6">
        <!-- Grid chính: Admin chiếm 2 phần, 4 khối chia 3 phần -->
        <div class="grid grid-cols-1 lg:grid-cols-5 space-x-6">
            <!-- Khối Welcome Admin - chiếm 2 phần -->
            <div
                    class="lg:col-span-2 bg-white rounded-lg shadow-sm border border-gray-100 p-8"
            >
                <div class="flex items-start justify-between">
                    <div>
                        <h1 class="text-3xl font-bold text-slate-900 mb-2">
                            Chào mừng Quản trị viên
                        </h1>
                        <p class="text-slate-600">
                            Làm quen với bảng điều khiển, sau đây là một số cách để bắt đầu.
                        </p>
                        <button
                                class="mt-4 px-4 py-2 bg-[#11234B] hover:shadow-xl text-white rounded-md text-sm font-medium"
                        >
                            Bắt đầu
                        </button>
                    </div>
                    <div class="text-blue-200">
                        <i class="fa-solid fa-person text-9xl opacity-20"></i>
                    </div>
                </div>
            </div>

            <!-- Khối 1: Total Booking -->
            <div
                    class="bg-white rounded-lg shadow-sm border border-gray-100 p-6"
            >
                <div class="flex items-start justify-between mb-4">
                    <div
                            class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center"
                    >
                        <i class="fa-solid fa-calendar text-blue-600 text-xl"></i>
                    </div>
                    <button class="text-gray-400 hover:text-gray-600">
                        <i class="fa-solid fa-ellipsis-v"></i>
                    </button>
                </div>
                <h3 class="text-gray-600 text-sm font-medium mb-2">
                    Số đơn đặt phòng
                </h3>
                <div class="mb-3">
                    <p class="text-3xl font-bold text-slate-900">12</p>
                </div>
                <div class="flex items-center gap-1 text-green-600 text-sm">
                    <i class="fa-solid fa-arrow-trend-up"></i>
                    <span>+10%</span>
                </div>
            </div>

            <!-- Khối 2: Menunggu Konfirmasi -->
            <div
                    class="bg-white rounded-lg shadow-sm border border-gray-100 p-6"
            >
                <div class="flex items-start justify-between mb-4">
                    <div
                            class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center"
                    >
                        <i
                                class="fa-solid fa-file-contract text-orange-600 text-xl"
                        ></i>
                    </div>
                    <button class="text-gray-400 hover:text-gray-600">
                        <i class="fa-solid fa-ellipsis-v"></i>
                    </button>
                </div>
                <h3 class="text-gray-600 text-sm font-medium mb-2">
                    Đơn chờ xác nhận
                </h3>
                <div class="mb-3">
                    <p class="text-3xl font-bold text-slate-900">1</p>
                </div>
                <div class="flex items-center gap-1 text-green-600 text-sm">
                    <i class="fa-solid fa-arrow-trend-up"></i>
                    <span>+0</span>
                </div>
            </div>

            <!-- Khối 3: Phòng Trống -->
            <div
                    class="bg-white rounded-lg shadow-sm border border-gray-100 p-6"
            >
                <div class="flex items-start justify-between mb-4">
                    <div
                            class="w-12 h-12 bg-cyan-100 rounded-lg flex items-center justify-center"
                    >
                        <i class="fa-solid fa-door-open text-cyan-600 text-xl"></i>
                    </div>
                    <button class="text-gray-400 hover:text-gray-600">
                        <i class="fa-solid fa-ellipsis-v"></i>
                    </button>
                </div>
                <h3 class="text-gray-600 text-sm font-medium mb-2">
                    Phòng Trống
                </h3>
                <div class="mb-3">
                    <p class="text-3xl font-bold text-slate-900">5</p>
                </div>
                <div class="flex items-center gap-1 text-green-600 text-sm">
                    <i class="fa-solid fa-arrow-trend-up"></i>
                    <span>+2%</span>
                </div>
            </div>
        </div>

        <!-- Biểu đồ thống kê -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Biểu đồ cột -->
            <div class="bg-white shadow-md rounded-xl p-5">
                <div class="flex justify-between items-center mb-3">
                    <h2 class="text-lg font-semibold text-gray-700">
                        Doanh thu theo tháng
                    </h2>
                    <span class="text-sm text-gray-500">Năm 2025</span>
                </div>
                <canvas id="barChart" height="200"></canvas>
            </div>
            <!-- Biểu đồ tròn -->
            <div class="bg-white shadow-md rounded-xl p-5">
                <div class="flex justify-between items-center mb-3">
                    <h2 class="text-lg font-semibold text-gray-700">Số lượng đặt phòng theo loại</h2>
                    <span class="text-sm text-gray-500">Tháng 11</span>
                </div>
                <canvas id="pieChart" height="200"></canvas>
            </div>
        </div>
    </div>
    </div>

<script type="module" src="/admin/js/dashboard.js"></script>
</body>
</html>