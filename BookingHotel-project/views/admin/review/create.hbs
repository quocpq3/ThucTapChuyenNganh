<div class="max-w-4xl mx-auto">
  <div class="rounded-lg border border-gray-200 bg-white shadow-md">
    <div class="border-b border-gray-200 px-6 py-4">
      <h3 class="text-lg font-semibold text-gray-900">Tạo Đánh Giá Mới</h3>
      <p class="text-sm text-gray-500">Người dùng đang đăng nhập sẽ được gán tự
        động</p>
    </div>

    <form
      action="/admin/review/create"
      method="POST"
      class="px-6 py-6 space-y-6"
    >

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Nội dung
          đánh giá</label>
        <textarea
          name="comment"
          rows="4"
          required
          class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
          placeholder="Viết đánh giá của bạn về trải nghiệm..."
        ></textarea>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Đánh giá sao</label>
        <input
          type="number"
          name="rating"
          min="1"
          max="5"
          required
          class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
          placeholder="Nhập số sao từ 1 đến 5"
        />
      </div>

      <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
        <a
          href="/admin/review"
          class="rounded-md border border-gray-300 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100"
        >Hủy</a>
        <button
          type="submit"
          class="rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white hover:bg-blue-700"
        >
          Tạo Đánh Giá
        </button>
      </div>

    </form>
  </div>
</div>