<div class="flex items-center mb-4 justify-between">
  <h2 class="text-lg font-semibold text-gray-700 mr-4">Quản lý Đánh giá</h2>
</div>

<div class="overflow-hidden rounded-lg border border-gray-200 shadow-md">
  <table
    class="w-full border-collapse bg-white text-left text-sm text-gray-500"
  >
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-4 font-medium text-gray-900">#</th>
        <th class="px-6 py-4 font-medium text-gray-900">Người dùng</th>
        <th class="px-6 py-4 font-medium text-gray-900">Nội dung</th>
        <th class="px-6 py-4 font-medium text-gray-900">Sao</th>
        <th class="px-6 py-4 font-medium text-gray-900">Trạng thái</th>
        <th class="px-6 py-4 font-medium text-gray-900 text-right">Thao tác</th>
      </tr>
    </thead>

    <tbody class="divide-y divide-gray-100 border-t border-gray-100">
      {{#each reviews}}
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 text-gray-700">{{stt}}</td>
          <td class="px-6 py-4 font-medium text-gray-900">{{user.name}}</td>
          <td class="px-6 py-4">{{comment}}</td>
          <td class="px-6 py-4">{{rating}}</td>
          <td class="px-6 py-4">
            {{#if statusApproved}}
              <span
                class="inline-flex items-center gap-1 rounded-full bg-green-50 px-2 py-1 text-xs font-semibold text-green-600"
              >
                Approved
              </span>
            {{else}}
              <span
                class="inline-flex items-center gap-1 rounded-full bg-red-50 px-2 py-1 text-xs font-semibold text-red-600"
              >
                Rejected
              </span>
            {{/if}}
          </td>
          <td class="px-6 py-4">
            <div class="flex justify-end gap-4">
              <form action="/admin/review/{{_id}}?_method=DELETE" method="POST">
                <button
                  type="submit"
                  class="text-red-600 hover:text-red-800"
                  title="Xoá"
                >
                  <i class="fa-solid fa-trash"></i>
                </button>
              </form>
              <a
                href="/admin/review/edit/{{_id}}"
                class="text-yellow-500 hover:text-yellow-700"
                title="Chỉnh trạng thái"
              >
                <i class="fa-solid fa-pen-to-square"></i>
              </a>

            </div>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>