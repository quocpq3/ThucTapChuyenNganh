<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Azure Ocean Resort — Demo</title>

    <!-- Tailwind CDN -->
    <script>
        // Tailwind config via CDN: expose design tokens using CSS vars
        tailwind = {
            config: {
                theme: {
                    extend: {
                        colors: {
                            primary: "hsl(var(--primary))",
                            "primary-foreground": "hsl(var(--primary-foreground))",
                            secondary: "hsl(var(--secondary))",
                            "secondary-foreground": "hsl(var(--secondary-foreground))",
                            accent: "hsl(var(--accent))",
                            "accent-foreground": "hsl(var(--accent-foreground))",
                            background: "hsl(var(--background))",
                            foreground: "hsl(var(--foreground))",
                            muted: "hsl(var(--muted))",
                            "muted-foreground": "hsl(var(--muted-foreground))",
                            border: "hsl(var(--border))",
                            card: "hsl(var(--card))",
                            "card-foreground": "hsl(var(--card-foreground))",
                        },
                        borderRadius: { lg: "0.75rem" },
                    },
                },
            },
        };
    </script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="./css/styles.css" />
</head>
<body class="bg-background text-foreground antialiased">
<!-- Toasts -->
<div id="toasts" class="toast-wrap" aria-live="polite"></div>

<!-- Header -->
<header
        class="fixed inset-x-0 top-0 z-40 backdrop border-b border-border/60 backdrop left-0 right-0 bg-card/60 header backdropshadow"
>
    <div
            class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between"
    >
        <div class="flex items-center gap-3">
            <div class="size-8 rounded-lg bg-[#11234B]"></div>
            <a href="index.html" class="text-lg font-semibold tracking-tight"
            >Khu Nghỉ Dưỡng Azure Ocean</a
            >
        </div>

        <nav class="hidden md:flex items-center gap-8 text-sm">
            <button
                    id="navRoomsBtn"
                    class="text-foreground/80 hover:text-foreground"
            >
                Phòng
            </button>
            <a href="#amenities" class="text-foreground/80 hover:text-foreground"
            >Tiện Ích</a
            >
            <a href="#offers" class="text-foreground/80 hover:text-foreground"
            >Ưu Đãi</a
            >
            <a
                    href="#testimonials"
                    class="text-foreground/80 hover:text-foreground"
            >Đánh Giá</a
            >
            <div class="flex items-center gap-3">
                <div
                        id="userInfo"
                        style="display: none"
                        class="flex items-center gap-2"
                >
              <span
                      class="text-sm text-foreground/80"
                      id="userNameDisplay"
              ></span>
                    <button
                            id="logoutBtn"
                            class="text-sm text-foreground/80 hover:text-foreground"
                    >
                        Đăng xuất
                    </button>
                </div>
                <button
                        id="loginBtn"
                        class="inline-flex items-center gap-2 rounded-md border border-input px-4 py-2 text-sm font-medium hover:bg-card/50"
                >
                    Đăng nhập
                </button>
                <button
                        id="bookNowHeader"
                        class="inline-flex items-center gap-2 rounded-md bg-[#11234B] text-white px-4 py-2 text-sm font-medium shadow hover:opacity-95"
                >
                    <!-- calendar icon -->
                    <svg
                            class="size-4"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                    >
                        <path
                                d="M7 10h10M7 14h4"
                                stroke-width="1.6"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                        />
                    </svg>
                    Đặt Ngay
                </button>
            </div>
        </nav>
        <div class="md:hidden flex items-center gap-2">
            <button
                    id="mobileToggle"
                    aria-label="Open menu"
                    class="inline-flex items-center justify-center p-2 rounded-md border border-input bg-card/80"
            >
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none">
                    <path
                            stroke="currentColor"
                            stroke-width="1.8"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M4 7h16M4 12h16M4 17h16"
                    />
                </svg>
            </button>
        </div>
    </div>
</header>

<!-- Mobile sheet -->
<div
        id="mobileSheet"
        class="fixed right-0 top-0 h-full w-72 bg-card text-card-foreground border-l border-border transform translate-x-full transition-transform z-50"
>
    <div class="p-6">
        <div class="flex items-center justify-between mb-6">
            <div class="flex items-center gap-3">
                <div
                        class="size-8 rounded-lg bg-gradient-to-br from-primary to-primary/80"
                ></div>
                <div class="font-semibold">Khu Nghỉ Dưỡng Azure</div>
            </div>
            <button id="mobileClose" aria-label="Đóng" class="p-2 rounded-md">
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none">
                    <path
                            stroke="currentColor"
                            stroke-width="1.6"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M6 6l12 12M18 6L6 18"
                    />
                </svg>
            </button>
        </div>

        <div class="flex flex-col gap-4">
            <button id="mobileRooms" class="text-left">Phòng</button>
            <a href="#amenities" class="text-left">Tiện Ích</a>
            <a href="#offers" class="text-left">Ưu Đãi</a>
            <a href="#testimonials" class="text-left">Đánh Giá</a>
            <div
                    id="mobileUserInfo"
                    style="display: none"
                    class="flex flex-col gap-2 border-t border-border pt-4 mt-2"
            >
            <span class="text-sm text-muted-foreground"
            >Xin chào, <span id="mobileUserName"></span
            ></span>
                <button
                        id="mobileLogoutBtn"
                        class="text-left text-sm text-foreground/80 hover:text-foreground"
                >
                    Đăng xuất
                </button>
            </div>
            <button
                    id="mobileLoginBtn"
                    class="mt-3 inline-flex items-center gap-2 rounded-md border border-input px-4 py-2"
            >
                Đăng nhập
            </button>
            <button
                    id="mobileBook"
                    class="mt-3 inline-flex items-center gap-2 rounded-md bg-primary text-primary-foreground px-4 py-2"
            >
                Đặt Ngay
            </button>
        </div>
    </div>
</div>

<!-- Page content -->
<main class="pt-24">
    <!-- Hero -->
    <section class="pt-6 pb-10">
        <div
                class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 grid lg:grid-cols-2 gap-12 items-center"
        >
            <div>
                <div
                        class="inline-flex items-center gap-2 rounded-full border px-3 py-1 text-xs text-muted-foreground"
                >
              <span
                      class="w-2 h-2 rounded-full bg-amber-400 inline-block"
              ></span>
                    Đẳng cấp nghỉ dưỡng ven biển trong từng chi tiết
                </div>

                <h1
                        class="mt-6 text-4xl sm:text-5xl font-extrabold tracking-tight text-foreground"
                >
                    Nơi chân trời gặp gỡ sự xa hoa
                </h1>

                <p class="mt-4 text-lg text-muted-foreground max-w-xl">
                    Trải nghiệm sự thoải mái tinh tế, tầm nhìn ngoạn mục và dịch vụ
                    đẳng cấp tại Azure Ocean Resort.
                </p>

                <div class="mt-8 flex items-center gap-4">
                    <button
                            id="heroBook"
                            class="inline-flex items-center gap-2 rounded-md bg-[#11234B] text-white px-5 py-3 text-sm font-semibold shadow"
                    >
                        Đặt phòng ngay
                    </button>
                    <button
                            id="heroExplore"
                            class="inline-flex items-center gap-2 rounded-md border border-input bg-card/50 px-4 py-2 text-sm"
                    >
                        Khám phá phòng
                    </button>
                </div>
                <div class="mt-8 flex items-center gap-3">
                    <div class="flex gap-1 text-amber-500">
                        <!-- 5 stars -->
                        <svg class="w-5 h-5 fill-amber-400" viewBox="0 0 24 24">
                            <path
                                    d="M12 .587l3.668 7.431L24 9.748l-6 5.85L19.335 24 12 20.201 4.665 24 6 15.598 0 9.748l8.332-1.73z"
                            />
                        </svg>
                        <svg class="w-5 h-5 fill-amber-400" viewBox="0 0 24 24">
                            <path
                                    d="M12 .587l3.668 7.431L24 9.748l-6 5.85L19.335 24 12 20.201 4.665 24 6 15.598 0 9.748l8.332-1.73z"
                            />
                        </svg>
                        <svg class="w-5 h-5 fill-amber-400" viewBox="0 0 24 24">
                            <path
                                    d="M12 .587l3.668 7.431L24 9.748l-6 5.85L19.335 24 12 20.201 4.665 24 6 15.598 0 9.748l8.332-1.73z"
                            />
                        </svg>
                        <svg class="w-5 h-5 fill-amber-400" viewBox="0 0 24 24">
                            <path
                                    d="M12 .587l3.668 7.431L24 9.748l-6 5.85L19.335 24 12 20.201 4.665 24 6 15.598 0 9.748l8.332-1.73z"
                            />
                        </svg>
                        <svg class="w-5 h-5 fill-amber-400" viewBox="0 0 24 24">
                            <path
                                    d="M12 .587l3.668 7.431L24 9.748l-6 5.85L19.335 24 12 20.201 4.665 24 6 15.598 0 9.748l8.332-1.73z"
                            />
                        </svg>
                    </div>
                    <span class="ml-2 text-sm text-muted-foreground"
                    >Đánh giá 5/5 bởi hơn 1,200 khách hàng</span
                    >
                </div>
            </div>

            <div class="relative">
                <div class="hero-image" style="min-height: 320px">
                    <!-- Decorative placeholder for hero image -->
                    <img
                            class="w-full h-full rounded-2xl"
                            src="https://images.squarespace-cdn.com/content/v1/5aadf482aa49a1d810879b88/1626698419120-J7CH9BPMB2YI728SLFPN/1.jpg"
                            alt=""
                    />
                </div>
            </div>
        </div>
    </section>

    <!-- Tiện ích -->
    <section id="amenities" class="mt-12">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <h2 class="text-2xl font-semibold">Tiện Ích Đẳng Cấp</h2>
            <p class="text-muted-foreground mt-2">
                Được thiết kế cho cuộc sống sang trọng
            </p>

            <div
                    class="mt-8 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
            >
                <!-- amenities list will be rendered by JS -->
                <div
                        class="p-4 rounded-lg border bg-card text-card-foreground shadow-sm"
                >
                    <p class="font-medium">Hồ Bơi Vô Cực</p>
                    <p class="text-sm text-muted-foreground">
                        Hồ bơi view biển tuyệt đẹp
                    </p>
                </div>
                <div
                        class="p-4 rounded-lg border bg-card text-card-foreground shadow-sm"
                >
                    <p class="font-medium">Trung Tâm Thể Dục</p>
                    <p class="text-sm text-muted-foreground">
                        Phòng gym hiện đại 24/7
                    </p>
                </div>
                <div
                        class="p-4 rounded-lg border bg-card text-card-foreground shadow-sm"
                >
                    <p class="font-medium">Spa & Chăm Sóc Sức Khỏe</p>
                    <p class="text-sm text-muted-foreground">Dịch vụ spa cao cấp</p>
                </div>
                <div
                        class="p-4 rounded-lg border bg-card text-card-foreground shadow-sm"
                >
                    <p class="font-medium">Ẩm Thực Cao Cấp</p>
                    <p class="text-sm text-muted-foreground">
                        Nhà hàng đạt sao Michelin
                    </p>
                </div>
                <div
                        class="p-4 rounded-lg border bg-card text-card-foreground shadow-sm"
                >
                    <p class="font-medium">WiFi Miễn Phí</p>
                    <p class="text-sm text-muted-foreground">Internet tốc độ cao</p>
                </div>
                <div
                        class="p-4 rounded-lg border bg-card text-card-foreground shadow-sm"
                >
                    <p class="font-medium">Lễ Tân 24/7</p>
                    <p class="text-sm text-muted-foreground">Hỗ trợ mọi lúc</p>
                </div>
                <div
                        class="p-4 rounded-lg border bg-card text-card-foreground shadow-sm"
                >
                    <p class="font-medium">Đỗ Xe Có Người Phục Vụ</p>
                    <p class="text-sm text-muted-foreground">Dịch vụ miễn phí</p>
                </div>
                <div
                        class="p-4 rounded-lg border bg-card text-card-foreground shadow-sm"
                >
                    <p class="font-medium">Dịch Vụ Phòng</p>
                    <p class="text-sm text-muted-foreground">Phục vụ 24 giờ</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Phòng -->
    <section id="rooms" class="mt-16">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <h2 class="text-2xl font-semibold">Phòng & Suite</h2>
            <p class="text-muted-foreground mt-2">Chọn nơi nghỉ dưỡng của bạn</p>

            <div
                    class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6"
                    id="roomsGrid"
            >
                <!-- Rendered by JS -->
            </div>
        </div>
    </section>

    <!-- Ưu đãi -->
    <section id="offers" class="mt-16">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <h2 class="text-2xl font-semibold">Ưu Đãi Đặc Biệt</h2>
            <p class="text-muted-foreground mt-2">Tạo nên kỳ nghỉ đáng nhớ</p>

            <div
                    class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6"
                    id="offersGrid"
            >
                <!-- Rendered by JS -->
            </div>
        </div>
    </section>

    <!-- Đánh giá -->
    <section id="testimonials" class="mt-16 mb-16">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <h2 class="text-2xl font-semibold">Khách Hàng Nói Gì</h2>
            <p class="text-muted-foreground mt-2">
                Được tin tưởng bởi du khách toàn cầu
            </p>

            <div
                    class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6"
                    id="testimonialsGrid"
            >
                <!-- Rendered by JS -->
            </div>
        </div>
    </section>

    <!-- Đăng ký nhận tin -->
    <section class="py-12 bg-card/40">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div
                    class="rounded-2xl border p-6 md:p-10 bg-gradient-to-br from-secondary to-background"
            >
                <div class="md:flex items-center justify-between gap-8">
                    <div>
                        <h3 class="text-xl font-semibold">Nhận Ưu Đãi Độc Quyền</h3>
                        <p class="text-sm text-muted-foreground mt-2">
                            Đăng ký nhận bản tin để nhận các ưu đãi dành riêng cho thành
                            viên.
                        </p>
                    </div>

                    <div class="mt-4 md:mt-0 flex w-full max-w-md items-center gap-3">
                        <input
                                id="newsletterEmail"
                                type="email"
                                placeholder="email@example.com"
                                class="flex-1 h-11 rounded-md border border-input bg-card px-3 text-sm"
                        />
                        <button
                                id="newsletterBtn"
                                class="rounded-md bg-primary text-primary-foreground px-4 py-2 font-semibold"
                        >
                            Đăng Ký
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="border-t border-border/60 bg-[#11234B] text-white">
        <div
                class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12 grid grid-cols-1 md:grid-cols-3 gap-8"
        >
            <div>
                <div class="flex items-center gap-3">
                    <div
                            class="size-8 rounded-lg bg-gradient-to-br from-primary to-primary/80"
                    ></div>
                    <span class="text-lg font-semibold">Azure Ocean Resort</span>
                </div>
                <p class="mt-4 text-sm text-muted-foreground max-w-sm">
                    Khu nghỉ dưỡng ven biển 5 sao mang đến trải nghiệm tinh tế, tầm
                    nhìn đại dương tuyệt đẹp và dịch vụ đẳng cấp thế giới.
                </p>
            </div>

            <div class="grid grid-cols-2 gap-8 md:col-span-2">
                <div>
                    <h4 class="text-sm font-semibold mb-3">Khám Phá</h4>
                    <ul class="space-y-2 text-sm text-muted-foreground">
                        <li>
                            <a href="#rooms" class="hover:text-foreground"
                            >Phòng & Suite</a
                            >
                        </li>
                        <li>
                            <a href="#amenities" class="hover:text-foreground"
                            >Tiện Ích</a
                            >
                        </li>
                        <li>
                            <a href="#offers" class="hover:text-foreground"
                            >Ưu Đãi Đặc Biệt</a
                            >
                        </li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-sm font-semibold mb-3">Công Ty</h4>
                    <ul class="space-y-2 text-sm text-muted-foreground">
                        <li>
                            <a href="#" class="hover:text-foreground">Về Chúng Tôi</a>
                        </li>
                        <li><a href="#" class="hover:text-foreground">Liên Hệ</a></li>
                        <li><a href="#" class="hover:text-foreground">Sự Kiện</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="border-t border-border/20 py-6">
            <div
                    class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 text-sm text-muted-foreground flex items-center justify-between"
            >
                <p>
                    © <span id="year"></span> Azure Ocean Resort. Đã đăng ký bản
                    quyền.
                </p>
                <div class="flex items-center gap-4">
                    <a href="#" class="hover:text-foreground">Quyền riêng tư</a>
                    <a href="#" class="hover:text-foreground">Điều khoản</a>
                </div>
            </div>
        </div>
    </footer>
</main>

<script src="./js/data.js"></script>
<script src="./js/utils.js"></script>
<script src="./js/main.js"></script>
</body>
</html>
