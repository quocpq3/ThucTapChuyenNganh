<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Document</title>
  </head>
  <body>
    <header
      class="fixed inset-x-0 top-0 z-40 backdrop border-b border-border/60 backdrop left-0 right-0 bg-card/60 header backdropshadow"
    >
      <div
        class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between"
      >
        <div class="flex items-center gap-3">
          <div class="size-8 rounded-lg bg-[#11234B]"></div>
          <a href="/" class="text-lg font-semibold tracking-tight">
            Khách sạn Azure Ocean
          </a>
        </div>

        <nav class="hidden md:flex items-center gap-8 text-sm">
        <a
            href="/rooms/room-list"
            class="text-foreground/80 hover:text-foreground"
          >Phòng</a>
          <a
            href="/#amenities"
            class="text-foreground/80 hover:text-foreground"
          >Tiện Ích</a>
          <a href="/#offers" class="text-foreground/80 hover:text-foreground">Ưu
            Đãi</a>
          <a
            href="/#testimonials"
            class="text-foreground/80 hover:text-foreground"
          >Đánh Giá</a>
          <div class="flex items-center gap-3">

              {{#if user}}
         <div class="flex items-center gap-3 border-2 p-3 rounded-lg">
                <span class="text-sm text-foreground/80">
                  Xin chào,
                  <strong>{{user.name}}</strong>!
                </span>
  
                <a
                  href="/logout"
                  class="px-3 py-1.5 text-xs font-medium rounded-md border border-border hover:bg-card transition"
                >
                  Đăng xuất
                </a>
         </div class="flex items-center gap-3">

              {{! 
              <a
                href="/admin"
                class="px-3 py-1.5 text-xs font-medium rounded-md border border-border hover:bg-card transition"
              >
                Admin Page
              </a> }}

            {{else}}

              <a
                href="/login"
                class="inline-flex items-center gap-2 rounded-md border border-input px-4 py-2 text-sm font-medium hover:bg-card/50"
              >
                Đăng nhập
              </a>
            {{/if}}

          <a
  href="/booking"
  class="group inline-flex items-center gap-2
         rounded-md bg-[#11234B]
         px-4 py-2 text-sm font-semibold text-white
         shadow-md transition-all duration-200
         hover:bg-[#1E3A8A] hover:shadow-lg"
>
  <svg
    class="size-4 transition-transform duration-200 group-hover:translate-x-0.5"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
  >
    <path
      d="M7 10h10M7 14h4"
      stroke-width="1.6"
      stroke-linecap="round"
      stroke-linejoin="round"
    />
  </svg>
  <span>Đặt ngay</span>
</a>

          </div>
        </nav>

        <div class="md:hidden flex items-center gap-2">
          <button
            id="mobileToggle"
            aria-label="Open menu"
            class="inline-flex items-center justify-center p-2 rounded-md border border-input bg-card/80"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none">
              <path
                stroke="currentColor"
                stroke-width="1.8"
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M4 7h16M4 12h16M4 17h16"
              />
            </svg>
          </button>
        </div>
      </div>
    </header>

  </body>
</html>