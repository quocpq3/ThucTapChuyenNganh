<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Document</title>
  </head>

  <body>
    <header
      class="flex items-center justify-between bg-white border-b px-3 py-2.5 sticky top-0 z-30"
    >
      <div class="flex items-center gap-3">
        <button
          id="openSidebar"
          class="lg:hidden text-red-600 hover:text-slate-900 text-xl"
        >☰</button>
        <div class="relative">
          <input
            type="text"
            placeholder="Tìm kiếm..."
            class="pl-10 pr-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#11234B] h-9"
          />
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5 absolute left-3 top-2.5 text-gray-400"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-4.35-4.35M11 19a8 8 0 100-16 8 8 0 000 16z"
            />
          </svg>
        </div>
      </div>

      <div class="flex items-center gap-3">
        <div
          class="w-10 h-10 flex items-center justify-center text-xl rounded-full border cursor-pointer"
        >
          <i class="fa-regular fa-bell"></i>
        </div>
        <div
          class="w-10 h-10 rounded-full bg-[#11234B] text-white flex items-center justify-center font-semibold"
        >
          QN
        </div>
        <details class="relative inline-block text-left group">
          <!-- Summary button -->
          <summary
            class="flex items-center gap-2 px-3 py-2 bg-white text-gray-900 border border-gray-300 rounded-md cursor-pointer hover:bg-gray-100 list-none"
          >
            {{#if user}}
              <span class="font-medium">Xin chào, {{user.name}}</span>
            {{/if}}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-4 h-4 transition-transform group-open:rotate-180"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"
              />
            </svg>
          </summary>

          <!-- Dropdown content -->
          <div
            class="absolute right-0 mt-2 w-40 bg-white text-gray-900 border border-gray-300 rounded-lg shadow-lg z-50"
          >
            <a
              href="/profile"
              class="block px-4 py-2 text-sm hover:bg-gray-100"
            >
              Profile
            </a>
            <a
              href="/settings"
              class="block px-4 py-2 text-sm hover:bg-gray-100"
            >
              Settings
            </a>
            <a href="/logout">
              <button
                type="submit"
                class="w-full text-left px-4 py-2 text-sm hover:bg-gray-100"
              >
                Logout
              </button>
            </a>
          </div>
        </details>

      </div>
    </header>

  </body>

</html>