<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Sidebar Quản lý phòng</title>

    <!-- Font Awesome -->
    <script
      src="https://kit.fontawesome.com/a2d9a64f8f.js"
      crossorigin="anonymous"
    ></script>

    <!-- AlpineJS -->
    <script
      src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"
      defer
    ></script>
  </head>

  <body>
    <div class="bg-gray-200 min-h-screen font-sans">
      <div class="flex">

        <!-- SIDEBAR -->
        <aside
          class="fixed inset-y-0 left-0 w-64 bg-white shadow-lg flex flex-col"
        >

          <!-- LOGO -->
          <div class="flex items-center justify-center h-16 border-b">
            <a href="/" class="font-bold text-lg text-[#11234B]">
              Azure Ocean Admin
            </a>
          </div>

          <!-- MENU -->
          <nav class="flex-1 overflow-y-auto py-4">

            <!-- TỔNG QUAN -->
            <a
              href="/admin"
              class="flex items-center gap-3 py-3 px-6 text-gray-700 hover:bg-gray-100"
            >
              <i class="fa-solid fa-chart-line w-5"></i>
              <span class="font-medium">Tổng quan</span>
            </a>

            <!-- PHÒNG -->
            <div x-data="{ open: false }">
              <button
                @click="open = !open"
                class="w-full flex justify-between items-center py-3 px-6 text-gray-700 hover:bg-gray-100"
              >
                <span class="flex items-center gap-3">
                  <i class="fa-solid fa-bed w-5"></i>
                  <span class="font-medium">Phòng</span>
                </span>
                <i
                  class="fa-solid fa-chevron-right transition-transform"
                  :class="{ 'rotate-90': open }"
                ></i>
              </button>

              <div x-show="open" x-collapse class="bg-gray-50">
                <a
                  href="/admin/roomtype"
                  class="block py-2 pl-14 text-sm text-gray-600 hover:bg-blue-500 hover:text-white"
                >
                  <i class="fa-solid fa-layer-group mr-2"></i>
                  Loại phòng
                </a>

                <a
                  href="/admin/rooms"
                  class="block py-2 pl-14 text-sm text-gray-600 hover:bg-blue-500 hover:text-white"
                >
                  <i class="fa-solid fa-door-open mr-2"></i>
                  Phòng
                </a>
              </div>
            </div>

            <!-- ĐẶT PHÒNG -->
            <div x-data="{ open: false }">
              <button
                @click="open = !open"
                class="w-full flex justify-between items-center py-3 px-6 text-gray-700 hover:bg-gray-100"
              >
                <span class="flex items-center gap-3">
                  <i class="fa-solid fa-calendar-check w-5"></i>
                  <span class="font-medium">Đặt phòng</span>
                </span>
                <i
                  class="fa-solid fa-chevron-right transition-transform"
                  :class="{ 'rotate-90': open }"
                ></i>
              </button>

              <div x-show="open" x-collapse class="bg-gray-50">
                <a
                  href="/admin/bookings"
                  class="block py-2 pl-14 text-sm text-gray-600 hover:bg-blue-500 hover:text-white"
                >
                  <i class="fa-solid fa-list mr-2"></i>
                  Danh sách đặt phòng
                </a>
              </div>
            </div>

            <!-- DỊCH VỤ -->
            <div x-data="{ open: false }">
              <button
                @click="open = !open"
                class="w-full flex justify-between items-center py-3 px-6 text-gray-700 hover:bg-gray-100"
              >
                <span class="flex items-center gap-3">
                  <i class="fa-solid fa-concierge-bell w-5"></i>
                  <span class="font-medium">Dịch vụ</span>
                </span>
                <i
                  class="fa-solid fa-chevron-right transition-transform"
                  :class="{ 'rotate-90': open }"
                ></i>
              </button>

              <div x-show="open" x-collapse class="bg-gray-50">
                <a
                  href="/admin/amenity"
                  class="block py-2 pl-14 text-sm text-gray-600 hover:bg-blue-500 hover:text-white"
                >
                  <i class="fa-solid fa-wifi mr-2"></i>
                  Tiện ích
                </a>

                <a
                  href="/admin/endow"
                  class="block py-2 pl-14 text-sm text-gray-600 hover:bg-blue-500 hover:text-white"
                >
                  <i class="fa-solid fa-tags mr-2"></i>
                  Ưu đãi
                </a>
              </div>
            </div>

            <!-- NGƯỜI DÙNG -->
            <div x-data="{ open: false }">
              <button
                @click="open = !open"
                class="w-full flex justify-between items-center py-3 px-6 text-gray-700 hover:bg-gray-100"
              >
                <span class="flex items-center gap-3">
                  <i class="fa-solid fa-users w-5"></i>
                  <span class="font-medium">Người dùng</span>
                </span>
                <i
                  class="fa-solid fa-chevron-right transition-transform"
                  :class="{ 'rotate-90': open }"
                ></i>
              </button>

              <div x-show="open" x-collapse class="bg-gray-50">
                <a
                  href="/admin/user"
                  class="block py-2 pl-14 text-sm text-gray-600 hover:bg-blue-500 hover:text-white"
                >
                  <i class="fa-solid fa-user mr-2"></i>
                  Danh sách người dùng
                </a>
                <a
                  href="/admin/review"
                  class="block py-2 pl-14 text-sm text-gray-600 hover:bg-blue-500 hover:text-white"
                >
                  <i class="fa-solid fa-user mr-2"></i>
                  Danh sách đánh giá
                </a>
              </div>
            </div>
            <!-- PHÁP LÝ -->
            <div x-data="{ open: false }">
              <button
                @click="open = !open"
                class="w-full flex justify-between items-center py-3 px-6 text-gray-700 hover:bg-gray-100"
              >
                <span class="flex items-center gap-3">
                  <i class="fa-solid fa-users w-5"></i>
                  <span class="font-medium">Pháp lý</span>
                </span>
                <i
                  class="fa-solid fa-chevron-right transition-transform"
                  :class="{ 'rotate-90': open }"
                ></i>
              </button>

              <div x-show="open" x-collapse class="bg-gray-50">
                <a
                  href="/admin/term"
                  class="block py-2 pl-14 text-sm text-gray-600 hover:bg-blue-500 hover:text-white"
                >
                  <i class="fa-solid fa-user mr-2"></i>
                  Điều khoản sử dụng
                </a>
                <a
                  href="/admin/privacy"
                  class="block py-2 pl-14 text-sm text-gray-600 hover:bg-blue-500 hover:text-white"
                >
                  <i class="fa-solid fa-user mr-2"></i>
                  Quyền riêng tư
                </a>
                <a
                  href="/admin/about"
                  class="block py-2 pl-14 text-sm text-gray-600 hover:bg-blue-500 hover:text-white"
                >
                  <i class="fa-solid fa-user mr-2"></i>
                  Về chúng tôi
                </a>
              </div>
            </div>
          </nav>
        </aside>

      </div>
    </div>

    <script src="/home/js/data.js"></script>
    <script type="module" src="/admin/js/rooms.js"></script>
  </body>
</html>