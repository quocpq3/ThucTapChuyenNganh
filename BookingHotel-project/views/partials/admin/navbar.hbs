<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Sidebar Quản lý phòng</title>

  </head>
  <body>
    <div class="bg-gray-200 min-h-screen font-sans">
      <div class="flex">

        <!-- SIDEBAR -->
        <aside
          class="fixed inset-y-0 left-0 w-64 bg-white shadow-lg flex flex-col"
        >
          <!-- LOGO -->
          <div class="flex items-center justify-center h-16 border-b">
            <a href="/" class="font-bold text-lg text-[#11234B]">Azure Ocean
              Admin</a>
          </div>

          <!-- MENU -->
          <nav class="flex-1 overflow-y-auto py-4">

            <!-- TỔNG QUAN -->
            <a
              href="/admin"
              class="w-full flex items-center gap-3 py-3 px-6 text-gray-700 hover:bg-gray-100"
            >
              <svg
                class="h-5 w-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3 12l2-2 4 4 8-8 4 4v6H3z"
                />
              </svg>
              <span class="font-medium">Tổng quan</span>
            </a>

            <!-- QUẢN LÝ PHÒNG -->
            <div x-data="{ open: false }">
              <button
                @click="open = !open"
                class="w-full flex justify-between items-center py-3 px-6 text-gray-700 hover:bg-gray-100"
              >
                <span class="flex items-center gap-3">
                  <svg
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M3 10l9-7 9 7v10a2 2 0 01-2 2h-4v-6H9v6H5a2 2 0 01-2-2V10z"
                    />
                  </svg>
                  <span class="font-medium">Quản lý phòng</span>
                </span>

                <svg
                  class="h-4 w-4 transform transition-transform"
                  :class="{ 'rotate-90': open }"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </button>

              <div x-show="open" x-collapse class="bg-gray-50">

                <!-- LOẠI PHÒNG -->
                <div class="py-1">
                  <a
                    href="/admin/roomtype"
                    class="block py-2 pl-14 text-sm text-gray-600 hover:bg-blue-500 hover:text-white"
                  >
                    Loại phòng
                  </a>
                </div>

                <!-- PHÒNG -->
                <div class="py-1">
                  <a
                    href="/admin/rooms"
                    class="block py-2 pl-14 text-sm text-gray-600 hover:bg-blue-500 hover:text-white"
                  >
                    Phòng
                  </a>
                </div>

                <!-- TIỆN ÍCH -->
                <div class="py-1">
                  <a
                    href="/admin/amenity"
                    class="block py-2 pl-14 text-sm text-gray-600 hover:bg-blue-500 hover:text-white"
                  >
                    Tiện ích
                  </a>
                </div>

              </div>
            </div>

            <!-- ĐẶT PHÒNG -->
            <div x-data="{ open: false }">
              <button
                @click="open = !open"
                class="w-full flex justify-between items-center py-3 px-6 text-gray-700 hover:bg-gray-100"
              >
                <span class="flex items-center gap-3">
                  <svg
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M8 7V3m8 4V3M3 11h18M5 21h14a2 2 0 002-2v-8H3v8a2 2 0 002 2z"
                    />
                  </svg>
                  <span class="font-medium">Đặt phòng</span>
                </span>

                <svg
                  class="h-4 w-4 transform transition-transform"
                  :class="{ 'rotate-90': open }"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </button>

              <div x-show="open" x-collapse class="bg-gray-50">
                <a
                  href="/admin/order"
                  class="block py-2 pl-14 text-sm text-gray-600 hover:bg-blue-500 hover:text-white"
                >
                  Danh sách đặt phòng
                </a>
              </div>
            </div>

            <!-- KHÁCH HÀNG -->
            <a
              href="/admin/customers"
              class="w-full flex items-center gap-3 py-3 px-6 text-gray-700 hover:bg-gray-100"
            >
              <svg
                class="h-5 w-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14c-4 0-7 3-7 7h14c0-4-3-7-7-7z"
                />
              </svg>
              <span class="font-medium">Khách hàng</span>
            </a>

            <!-- DOANH THU -->
            <div x-data="{ open: false }">
              <button
                @click="open = !open"
                class="w-full flex justify-between items-center py-3 px-6 text-gray-700 hover:bg-gray-100"
              >
                <span class="flex items-center gap-3">
                  <svg
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8V6m0 12v-2"
                    />
                  </svg>
                  <span class="font-medium">Doanh thu</span>
                </span>

                <svg
                  class="h-4 w-4 transform transition-transform"
                  :class="{ 'rotate-90': open }"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </button>

              <div x-show="open" x-collapse class="bg-gray-50">
                <a
                  href="/admin/revenue"
                  class="block py-2 pl-14 text-sm text-gray-600 hover:bg-blue-500 hover:text-white"
                >
                  Tổng quan
                </a>
              </div>
            </div>

            <!-- CÀI ĐẶT -->
            <a
              href="/admin/settings"
              class="w-full flex items-center gap-3 py-3 px-6 text-gray-700 hover:bg-gray-100"
            >
              <svg
                class="h-5 w-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2z"
                />
              </svg>
              <span class="font-medium">Cài đặt</span>
            </a>

          </nav>
        </aside>

      </div>
    </div>

    <script
      src="https://kit.fontawesome.com/a2d9a64f8f.js"
      crossorigin="anonymous"
    ></script>
    <script src="/home/js/data.js"></script>
    <script type="module" src="/admin/js/rooms.js"></script>
    <script
      src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"
      defer
    ></script>
  </body>
</html>