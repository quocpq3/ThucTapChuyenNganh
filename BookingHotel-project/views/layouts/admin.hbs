<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Admin Dashboard - Azure Ocean Resort</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/styles.css" />
    <style>
        .admin-sidebar {
            height: calc(100vh - 4rem);
        }
        .nav-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            border-radius: 0.375rem;
            color: hsl(var(--foreground));
            text-decoration: none;
            transition: background-color 0.2s;
        }
        .nav-link:hover {
            background-color: hsl(var(--muted));
        }
        .nav-link.active {
            background-color: hsl(var(--primary));
            color: hsl(var(--primary-foreground));
        }
        .admin-content {
            min-height: calc(100vh - 4rem);
        }
    </style>
</head>
<body class="bg-background text-foreground antialiased">
<div id="toasts" class="toast-wrap" aria-live="polite"></div>

<!-- Header -->
<header class="fixed inset-x-0 top-0 z-40 border-b border-border/60 bg-card/60 h-16">
    <div class="mx-auto max-w-full px-6 h-16 flex items-center justify-between">
        <div class="flex items-center gap-3">
            <div class="size-8 rounded-lg bg-[#11234B]"></div>
            <a href="/admin/dashboard" class="text-lg font-semibold tracking-tight">
                Azure Ocean - Admin
            </a>
        </div>

        <div class="flex items-center gap-4">
            <div class="flex items-center gap-2">
                <div
                        class="size-8 rounded-full bg-gradient-to-br from-primary to-primary/80 flex items-center justify-center text-primary-foreground font-semibold text-sm"
                >
                    A
                </div>
                <span class="text-sm font-medium" id="adminNameDisplay">Admin</span>
            </div>
            <button
                    id="adminLogoutBtn"
                    class="text-sm px-3 py-2 rounded-md border border-border hover:bg-card/50"
            >
                Đăng xuất
            </button>
        </div>
    </div>
</header>

<div class="flex pt-16">
    <!-- Sidebar -->
    <aside class="w-64 bg-card border-r border-border/60 admin-sidebar">
        <nav class="p-6 space-y-2">
            <a href="/admin/dashboard" class="nav-link active" data-page="dashboard">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                          d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                    <polyline points="9 22 9 12 15 12 15 22"/>
                </svg>
                <span>Dashboard</span>
            </a>

            <a href="/admin/rooms" class="nav-link" data-page="rooms">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                          d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                    <rect x="6" y="6" width="4" height="4"/>
                    <rect x="14" y="6" width="4" height="4"/>
                </svg>
                <span>Quản Lý Phòng</span>
            </a>

            <a href="/admin/amenities" class="nav-link" data-page="amenities">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                          d="M12 8v4m0 4v.01M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0z"/>
                </svg>
                <span>Tiện Ích</span>
            </a>

            <a href="/admin/offers" class="nav-link" data-page="offers">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                          d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0z"/>
                </svg>
                <span>Ưu Đãi</span>
            </a>

            <a href="/admin/bookings" class="nav-link" data-page="bookings">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                          d="M9 12h6m-6 4h6m2 5H7a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5.586a1 1 0 0 1 .707.293l5.414 5.414a1 1 0 0 1 .293.707V19a2 2 0 0 1-2 2z"/>
                </svg>
                <span>Đặt Phòng</span>
            </a>

            <a href="/admin/users" class="nav-link" data-page="users">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                          d="M12 4.354a4 4 0 1 1 0 8 4 4 0 0 1 0-8M3 20h18a3 3 0 0 0-3-3H6a3 3 0 0 0-3 3z"/>
                </svg>
                <span>Người Dùng</span>
            </a>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 admin-content p-6">
        <div id="adminContent">
            <!-- Content will be loaded here -->
        </div>
    </main>
</div>

<script src="/js/data.js"></script>
<script src="/js/utils.js"></script>
<script src="/js/admin-utils.js"></script>
<script src="/js/admin-dashboard.js"></script>
</body>
</html>
